<Window x:Class="FontBind.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FontBind"
        mc:Ignorable="d"
        Title="Bind1ng" Height="240.4" Width="507.71">
    <Grid x:Name="txtColor">
        <TextBox x:Name="txtbox" HorizontalAlignment="Left" Height="23" Margin="298,17,0,0" TextWrapping="Wrap" Text="Times New Roman" VerticalAlignment="Top" Width="120" />
        <Label x:Name="lbl" Content="Cambia il font in questa label utilizzando solo xaml:" HorizontalAlignment="Left" Margin="19,15,0,0" VerticalAlignment="Top" FontFamily="{Binding Path=Text, ElementName=txtbox}"/>
        <TextBlock x:Name="coloraTextBlock" HorizontalAlignment="Left" Margin="26,55,0,0" TextWrapping="Wrap" Text="Scegli il colore a questa textblock" VerticalAlignment="Top" Foreground="Black"/>
        <TextBox x:Name="txtboxColor" HorizontalAlignment="Left" Height="23" Margin="298,54,0,0" TextWrapping="Wrap" Text="Black" VerticalAlignment="Top" Width="120" />

    </Grid>
</Window>
